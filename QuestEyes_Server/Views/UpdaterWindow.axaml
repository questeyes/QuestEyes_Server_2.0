<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:QuestEyes_Server.ViewModels"
		x:DataType="vm:UpdaterWindowViewModel"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="-1"
        x:Class="QuestEyes_Server.Views.UpdaterWindow"
        Title="QuestEyes - Firmware Updater"
		x:CompileBindings="True"
		Background="#681cd9"
		WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight">

	<Window.DataContext>
		<vm:UpdaterWindowViewModel/>
	</Window.DataContext>

	<Panel>
		<Panel Margin="40">
			<StackPanel HorizontalAlignment="Center">
				<!-- Title and stats -->
				<Label FontFamily="Microsoft YaHei" FontWeight="Bold" FontSize="20" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Firmware Updater</Label>
				<Label x:Name="UpdateStageText" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Connecting to update server...</Label>
				<Label x:Name="ProgressText" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsVisible="False">0%</Label>
			</StackPanel>
		</Panel>
	</Panel>
</Window>
